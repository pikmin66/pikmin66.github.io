/* Base styles */
html, body {
    height: 100%;
    margin: 0;
    padding: 0;
    overflow: hidden; /* Prevent scrolling */
    font-family: 'Roboto', sans-serif;
    background-color: #0D5C2D; /* Deep Green */
    color: #FFFFF0; /* Ivory */
}

#background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url('images/background.jpg'); /* Use an appropriate background image */
    background-size: cover;
    background-position: center;
    opacity: 0.3;
    z-index: -1;
}

#game-container {
    position: relative;
    width: 100%;
    height: 100%;
}

#game-info {
    display: flex;
    justify-content: space-around;
    padding: 10px;
    background-color: rgba(54, 69, 79, 0.8); /* Charcoal Gray with transparency */
}

.player-info, #phase-indicator {
    background-color: #36454F; /* Charcoal Gray */
    padding: 10px;
    border-radius: 5px;
    color: #FFFFF0;
    flex: 1;
    margin: 0 5px;
    text-align: center;
}

#main-play-area {
    position: relative;
    width: 100%;
    height: calc(100% - 200px); /* Adjust based on header and footer heights */
    display: flex;
    justify-content: center;
    align-items: center;
}

#play-area {
    position: relative;
    width: 90%;
    height: 100%;
    max-width: 1000px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
}

#opponent-side, #player-side {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.batteries {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    width: 70%;
    margin: 10px 0;
}

#player-batteries {
    order: 2;
}

.graveyard {
    width: 20%;
    text-align: center;
}

#play-table {
    position: relative;
    width: 400px;
    height: 400px;
    background-color: #228B22; /* Forest Green */
    border-radius: 50%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.played-card-slot {
    width: 120px;
    height: 180px;
    border: 2px dashed #DAA520;
    background-color: rgba(255, 255, 255, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 10px;
}

.played-card-slot.flashing {
    animation: flashing 1s infinite;
}

@keyframes flashing {
    0% { border-color: #FFD700; }
    50% { border-color: #DAA520; }
    100% { border-color: #FFD700; }
}

#game-messages {
    position: absolute;
    bottom: 220px;
    left: 0;
    width: 100%;
    background-color: rgba(54, 69, 79, 0.8); /* Charcoal Gray with transparency */
    padding: 10px;
    color: #FFFFF0;
    text-align: center;
    font-size: 18px;
}

#chat-interface {
    position: absolute;
    bottom: 160px;
    left: 0;
    width: 100%;
    background-color: rgba(54, 69, 79, 0.8); /* Charcoal Gray with transparency */
    padding: 10px;
    max-height: 150px;
    overflow-y: auto;
    font-size: 16px;
}

#player-hand {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    background-color: rgba(54, 69, 79, 0.9); /* Charcoal Gray with transparency */
    padding: 10px;
    color: #FFFFF0;
}

#player-cards {
    display: flex;
    justify-content: center;
    flex-wrap: nowrap;
    overflow-x: auto;
    padding: 10px;
}

.card {
    position: relative;
    width: 100px;
    height: 150px;
    margin: 0 -50px;
    text-align: center;
    cursor: pointer;
    color: #000;
    background-color: #FFFFF0; /* Ivory */
    display: flex;
    flex-direction: column;
    justify-content: center;
    z-index: 1;
    transition: transform 0.3s;
}

.card.selected {
    transform: translateY(-20px);
    z-index: 2;
}

.card img {
    width: 100%;
    height: 100%;
}

.card-rank {
    font-size: 20px;
    font-weight: bold;
}

.card-suit {
    font-size: 32px;
}

.card-info {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: rgba(255,255,255,0.8);
    font-size: 14px;
}

.card.grayed-out {
    opacity: 0.5;
    pointer-events: none;
}

#game-controls {
    position: absolute;
    top: 10px;
    right: 10px;
    padding: 10px;
}

#game-controls button {
    margin: 5px;
    padding: 10px 20px;
    font-size: 16px;
    background-color: #DAA520; /* Gold */
    color: #000;
    border: none;
    border-radius: 5px;
}

#game-controls button:hover {
    background-color: #FFD700; /* Brighter Gold */
}

.modal {
    display: none;
    position: fixed;
    z-index: 100;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: rgba(0,0,0,0.5);
}

.modal-content {
    background-color: #fefefe;
    margin: 5% auto;
    padding: 20px;
    width: 80%;
    max-width: 600px;
    position: relative;
    color: #000;
}

.close-button, .close-card-info-button {
    color: #aaa;
    float: right;
    font-size: 28px;
    font-weight: bold;
    cursor: pointer;
}

.draggable {
    touch-action: none; /* Prevent scrolling on touch devices during drag */
}

.dragging {
    opacity: 0.5;
    position: absolute;
    z-index: 1000;
}

.drop-zone {
    border: 2px dashed #DAA520;
}

.drop-zone.flashing {
    animation: flashing 1s infinite;
}

.creature-card.flashing {
    animation: flashing 1s infinite;
}

.ability-list {
    position: absolute;
    top: -150px;
    left: 0;
    background-color: #FFFFF0;
    border: 1px solid #000;
    padding: 10px;
    z-index: 10;
}

.ability-list button {
    display: block;
    width: 100%;
    margin-bottom: 5px;
    font-size: 16px;
}

.chat-message {
    display: flex;
    align-items: flex-start;
    margin-bottom: 5px;
}

.chat-avatar {
    width: 40px;
    height: 40px;
    margin-right: 10px;
}

.chat-text {
    max-width: 80%;
    background-color: rgba(255, 255, 240, 0.1);
    padding: 5px 10px;
    border-radius: 5px;
    font-size: 16px;
}

@media only screen and (max-width: 768px) {
    #play-table {
        width: 300px;
        height: 300px;
    }
    .played-card-slot {
        width: 100px;
        height: 150px;
    }
    .card {
        width: 80px;
        height: 120px;
    }
    .card-rank {
        font-size: 16px;
    }
    .card-suit {
        font-size: 24px;
    }
    .chat-avatar {
        width: 30px;
        height: 30px;
    }
    .chat-text {
        font-size: 14px;
    }
    .ability-list {
        top: -130px;
    }
    #game-messages {
        font-size: 16px;
    }
    #chat-interface {
        font-size: 14px;
    }
}

@media only screen and (max-width: 480px) {
    #play-table {
        width: 250px;
        height: 250px;
    }
    .played-card-slot {
        width: 80px;
        height: 120px;
    }
    .card {
        width: 70px;
        height: 105px;
        margin: 0 -35px;
    }
    .card-rank {
        font-size: 14px;
    }
    .card-suit {
        font-size: 20px;
    }
    .ability-list {
        top: -110px;
    }
    #game-messages {
        font-size: 14px;
    }
    #chat-interface {
        font-size: 12px;
    }
}

/* Card Type Borders */
.taker-card {
    border: 4px solid royalblue;
}

.trickster-card {
    border: 4px solid purple;
}

.spell-card {
    border: 4px solid green;
}

.trap-card {
    border: 4px solid gray;
}

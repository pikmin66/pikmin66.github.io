/* Base styles */
body {
    font-family: 'Roboto', sans-serif;
    background-color: #0D5C2D; /* Deep Green */
    margin: 0;
    padding: 0;
    color: #FFFFF0; /* Ivory */
    overflow-x: hidden;
    position: relative;
}

#background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url('images/background.jpg'); /* Use an appropriate background image */
    background-size: cover;
    background-position: center;
    opacity: 0.3;
    z-index: -1;
}

#game-container {
    padding: 20px;
    max-width: 1200px;
    margin: 0 auto;
}

h1, h2, h3 {
    text-align: center;
    color: #DAA520; /* Gold */
}

#game-info {
    display: flex;
    justify-content: space-around;
    margin-bottom: 20px;
    flex-wrap: wrap;
}

.player-info {
    width: 30%;
    background-color: #228B22; /* Forest Green */
    padding: 10px;
    border-radius: 5px;
    color: #FFFFF0;
    margin-bottom: 10px;
}

#phase-indicator {
    width: 30%;
    background-color: #800020; /* Rich Burgundy */
    padding: 10px;
    border-radius: 5px;
    color: #FFFFF0;
    margin-bottom: 10px;
}

#battlefield {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 20px;
}

#play-area {
    position: relative;
    width: 100%;
    max-width: 600px;
    height: 300px;
    background-color: #36454F; /* Charcoal Gray */
    border-radius: 50%;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 20px;
}

#play-table {
    position: relative;
    width: 90%;
    height: 90%;
    border: 2px solid #DAA520;
    border-radius: 50%;
    display: flex;
    justify-content: space-around;
    align-items: center;
}

.played-card-slot {
    width: 100px;
    height: 150px;
    border: 2px dashed #DAA520;
    display: flex;
    align-items: center;
    justify-content: center;
}

.played-card-slot.flashing {
    animation: flashing 1s infinite;
}

#graveyards {
    display: flex;
    justify-content: space-around;
    width: 100%;
    margin-bottom: 20px;
}

.graveyard {
    width: 45%;
    background-color: #36454F; /* Charcoal Gray */
    padding: 10px;
    border-radius: 5px;
    color: #FFFFF0;
}

#fields {
    display: flex;
    justify-content: space-around;
    width: 100%;
    flex-wrap: wrap;
}

.field {
    width: 45%;
    background-color: #36454F; /* Charcoal Gray */
    padding: 10px;
    border-radius: 5px;
    color: #FFFFF0;
    margin-bottom: 10px;
}

.batteries {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
}

.battery {
    position: relative;
    margin: 5px;
    border: 2px solid transparent;
}

.battery.flashing {
    border: 2px solid #FFD700; /* Brighter Gold */
    animation: flashing 1s infinite;
}

@keyframes flashing {
    0% { border-color: #FFD700; }
    50% { border-color: #DAA520; }
    100% { border-color: #FFD700; }
}

#game-messages {
    background-color: #36454F; /* Charcoal Gray */
    padding: 10px;
    margin: 10px 0;
    border: 1px solid #ccc;
    min-height: 50px;
    color: #FFFFF0;
}

#chat-interface {
    background-color: #36454F; /* Charcoal Gray */
    padding: 10px;
    border-radius: 5px;
    color: #FFFFF0;
    max-height: 200px;
    overflow-y: auto;
    margin-bottom: 20px;
}

#chat-messages {
    display: flex;
    flex-direction: column;
}

.chat-message {
    display: flex;
    align-items: flex-start;
    margin-bottom: 10px;
}

.chat-avatar {
    width: 40px;
    height: 40px;
    margin-right: 10px;
}

.chat-text {
    max-width: 80%;
    background-color: rgba(255, 255, 240, 0.1);
    padding: 5px 10px;
    border-radius: 5px;
}

.card-container {
    background-color: #36454F; /* Charcoal Gray */
    padding: 10px;
    border-radius: 5px;
    margin-bottom: 20px;
    color: #FFFFF0;
}

#player-cards {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
}

.card {
    position: relative;
    width: 100px;
    height: 150px;
    border: 1px solid #000;
    background-color: #FFFFF0; /* Ivory */
    margin: 5px;
    text-align: center;
    cursor: pointer;
    color: #000;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.card img {
    width: 100%;
    height: 100%;
}

.card-rank {
    font-size: 24px;
    font-weight: bold;
}

.card-suit {
    font-size: 36px;
}

.card-info {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: rgba(255,255,255,0.8);
    font-size: 12px;
}

.card.grayed-out {
    opacity: 0.5;
    pointer-events: none;
}

#game-controls {
    text-align: center;
    margin-bottom: 20px;
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
}

#game-controls button {
    margin: 5px 10px;
    padding: 10px 20px;
    font-size: 16px;
    background-color: #DAA520; /* Gold */
    color: #000;
    border: none;
    border-radius: 5px;
}

#game-controls button:hover {
    background-color: #FFD700; /* Brighter Gold */
}

.modal {
    display: none;
    position: fixed;
    z-index: 100;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: rgba(0,0,0,0.5);
}

.modal-content {
    background-color: #fefefe;
    margin: 10% auto;
    padding: 20px;
    width: 80%;
    position: relative;
    color: #000;
}

.close-button, .close-card-info-button {
    color: #aaa;
    float: right;
    font-size: 28px;
    font-weight: bold;
    cursor: pointer;
}

button {
    cursor: pointer;
}

button:disabled {
    cursor: not-allowed;
    opacity: 0.5;
}

.card-info-content {
    width: 400px;
    margin-top: 15%;
}

#card-info-details {
    text-align: left;
}

.draggable {
    position: relative;
}

.dragging {
    opacity: 0.5;
    position: absolute;
    z-index: 1000;
}

.drop-zone {
    border: 2px dashed #DAA520;
}

.drop-zone.flashing {
    animation: flashing 1s infinite;
}

.creature-card.flashing {
    animation: flashing 1s infinite;
}

.ability-list {
    position: absolute;
    top: -100px;
    left: 0;
    background-color: #FFFFF0;
    border: 1px solid #000;
    padding: 5px;
}

.ability-list button {
    display: block;
    width: 100%;
    margin-bottom: 5px;
}

/* Responsive Design */
@media only screen and (max-width: 768px) {
    #game-container {
        padding: 10px;
    }
    #game-info, #fields, #graveyards {
        flex-direction: column;
        align-items: center;
    }
    .player-info, #phase-indicator, .field, .graveyard {
        width: 100%;
    }
    #play-area {
        width: 100%;
        height: auto;
        border-radius: 0;
    }
    #play-table {
        flex-direction: column;
        width: 100%;
        height: auto;
    }
    .played-card-slot {
        margin: 10px 0;
    }
    .card {
        width: 70px;
        height: 105px;
    }
    .card-rank {
        font-size: 18px;
    }
    .card-suit {
        font-size: 24px;
    }
    #game-controls {
        flex-direction: column;
    }
    #game-controls button {
        width: 100%;
        margin: 5px 0;
    }
    .modal-content {
        width: 95%;
        margin-top: 20%;
    }
    .card-info-content {
        width: 95%;
        margin-top: 20%;
    }
    .ability-list {
        position: static;
        width: 100%;
        margin-top: 5px;
    }
    .ability-list button {
        font-size: 14px;
        padding: 5px;
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Sheepshead: Trickster Variant</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div id="background"></div>
    <div id="game-container">
        <!-- Game Info -->
        <div id="game-info">
            <div id="player-info" class="player-info">
                <h2>Your Info</h2>
                <p>Life Points (LP): <span id="player-lp">8000</span></p>
                <p>Star Points (SP): <span id="player-sp">50</span></p>
            </div>
            <div id="phase-indicator">
                <h2>Current Phase: <span id="current-phase">Not Started</span></h2>
                <p>Turn: <span id="turn-player">Player</span></p>
            </div>
            <div id="opponent-info" class="player-info">
                <h2>Opponent's Info</h2>
                <p>Life Points (LP): <span id="opponent-lp">8000</span></p>
                <p>Star Points (SP): <span id="opponent-sp">50</span></p>
            </div>
        </div>

        <!-- Main Play Area -->
        <div id="main-play-area">
            <div id="play-area">
                <!-- Opponent's Side -->
                <div id="opponent-side">
                    <div id="opponent-batteries" class="batteries"></div>
                    <div id="opponent-graveyard" class="graveyard">
                        <h3>Opponent's Graveyard</h3>
                        <div id="opponent-graveyard-cards"></div>
                    </div>
                </div>

                <!-- Play Table -->
                <div id="play-table">
                    <div id="opponent-played-card" class="played-card-slot"></div>
                    <div id="player-played-card" class="played-card-slot"></div>
                </div>

				<!-- Player's Side -->
				<div id="player-side">
					<div id="player-batteries" class="batteries">
						<!-- Battery Grid (4x4) -->
						<div class="battery-grid">
							<!-- Generate 16 battery slots -->
							${[...Array(16)].map((_, i) => `<div class="battery-slot" id="battery-slot-${i + 1}"></div>`).join('')}
					</div>
				</div>
				<!-- Graveyard moved to the left -->
            </div>
        </div>

        <!-- Game Messages -->
        <div id="game-messages"></div>

        <!-- Chat Interface -->
        <div id="chat-interface">
            <div id="chat-messages"></div>
        </div>

        <!-- Player Hand -->
        <div id="player-hand">
            <div id="player-cards"></div>
        </div>

        <!-- Game Controls -->
        <div id="game-controls">
            <button id="start-game">Start Game</button>
            <button id="show-hierarchy">Show Card Hierarchy</button>
            <button id="end-phase" style="display: none;">End Phase</button>
        </div>

        <!-- Modal for Card Hierarchy -->
        <div id="hierarchy-modal" class="modal">
            <div class="modal-content">
                <span class="close-button">&times;</span>
                <h2>Card Hierarchy and Points</h2>
                <div id="hierarchy-content"></div>
            </div>
        </div>

        <!-- Floating Card Info -->
        <div id="card-info-modal" class="modal">
            <div class="modal-content card-info-content">
                <span class="close-card-info-button">&times;</span>
                <div id="card-info-details"></div>
            </div>
        </div>
    </div>

    <!-- Include your JavaScript file -->
    <script src="script.js"></script>
</body>
</html>
